<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ConsulterFragment">

    <Button
        android:id="@+id/tousInterBtn"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:gravity="center_horizontal"
        android:text="Tous les interventients"
        android:textAlignment="center"
        android:textColor="@color/jaune"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.301" />

    <Button
        android:id="@+id/dateInterBtn"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginTop="72dp"
        android:gravity="center_horizontal"
        android:text="Intervention par date"
        android:textAlignment="center"
        android:textColor="@color/jaune"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tousInterBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tousInterBtn"
        app:layout_constraintTop_toBottomOf="@+id/tousInterBtn"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/chooseDate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="368dp"
        android:src="@drawable/ic_clock"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toEndOf="@+id/dateInterBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>